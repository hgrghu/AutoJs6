<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.agent.ScriptEditorAgentActivity">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 主内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Agent控制区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Agent开关 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_smart_toy_24"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="启用AI Agent监控"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Agent选项区域 -->
                    <LinearLayout
                        android:id="@+id/layout_agent_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="参考信息设置"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <!-- 参考信息显示 -->
                        <TextView
                            android:id="@+id/text_reference_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未添加参考信息"
                            android:textSize="14sp"
                            android:padding="12dp"
                            android:background="?attr/colorSurfaceVariant"
                            android:layout_marginBottom="12dp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <!-- 参考图片显示 -->
                        <ImageView
                            android:id="@+id/image_reference"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:visibility="gone"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="12dp"
                            android:background="?attr/colorSurfaceVariant" />

                        <!-- 参考操作按钮 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_add_text_reference"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="添加文本描述"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Button.TonalButton"
                                app:icon="@drawable/ic_edit_24"
                                app:iconSize="18dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_add_image_reference"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="添加参考图片"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Button.TonalButton"
                                app:icon="@drawable/ic_image_24"
                                app:iconSize="18dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_clear_reference"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="清除参考信息"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:icon="@drawable/ic_clear_24"
                            app:iconSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 脚本编辑区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_code_24"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="脚本代码编辑器"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_analyze_screen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分析屏幕"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            app:icon="@drawable/ic_visibility_24"
                            app:iconSize="16dp" />

                    </LinearLayout>

                    <!-- 代码编辑器 -->
                    <EditText
                        android:id="@+id/edit_script"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:gravity="top|start"
                        android:background="@drawable/bg_code_editor"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:scrollbars="vertical"
                        android:hint="在此输入AutoJs6脚本代码..."
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="16dp" />

                    <!-- 执行控制按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_execute_script"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="执行脚本"
                            style="@style/Widget.Material3.Button"
                            app:icon="@drawable/ic_play_arrow_24" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_stop_monitoring"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="停止监控"
                            android:visibility="gone"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:icon="@drawable/ic_stop_24" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 监控状态区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_monitor_24"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="执行状态监控"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/progress_monitoring"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone"
                            style="?android:attr/progressBarStyleSmall" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_monitoring_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等待执行脚本..."
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 修改历史区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_history_24"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="AI修改历史"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_toggle_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="显示修改历史"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            app:icon="@drawable/ic_expand_more_24"
                            app:iconSize="16dp" />

                    </LinearLayout>

                    <!-- 修改历史列表 -->
                    <LinearLayout
                        android:id="@+id/layout_modification_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="记录AI对脚本的自动修改和优化过程"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_modifications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>